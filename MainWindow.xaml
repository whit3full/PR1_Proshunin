<Window x:Class="PR1_Proshunin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR1_Proshunin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="stackPanel">
            <CheckBox x:Name="checkBox1" IsThreeState="True" 
                      IsChecked="False" Height="20" Content="Неотмеченное"/>
            <CheckBox x:Name="checkBox2" IsThreeState="True" 
                      IsChecked="True" Height="20" Content="Отмечено"/>
            <CheckBox x:Name="checkBox3" IsThreeState="True" 
                      IsChecked="{x:Null}" Height="20" Content="Неопределно"/>
        </StackPanel>
    </Grid>
</Window>
